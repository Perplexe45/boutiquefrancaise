{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique française{% endblock %}

{% block content %}
    <h1>Nos produits</h1>

<div class="row product-container">
    {% for product in products %}   {# "products" de ProductController #}
        {# {{ dump (product) }} #}
        <div class="col-md-4">
            <div class="product-item text-center"> 
                {# On crée une image cliquable et on collecte le bon produit grace au slug en deuxième param#}
                <a href="{{ path('product',{'slug':product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="" class="img-fluid "></a>
                
                <h5>{{ product.name }}</h5>
                <p   class="product-subtitle">{{ product.subtitle }}</p>
                <p class="product-price">{{ (product.price/100) | number_format(2,',','.') }} €</p>
                
            </div>
        </div>
    {% endfor %}

</div>


{% endblock %}
