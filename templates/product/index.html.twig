{% extends 'base.html.twig' %}

{% block title %}Nos produits - La boutique française
{% endblock %}

{% block content %}
	<div class="row">
		<div class="col-md-3">
			<h3>Filtrer</h3>
			{# Rechercher #}
			{#  {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }} #}
			{{form(form)}}
			</div>
			<div class="col-md-9">
				<h3>Nos produits</h3>
				<div class="row product-container">
					{% for product in products %}
						{# "products" de ProductController #}
						{# {{ dump (product) }} #}
							<div class="col-md-4"> <div
								class="product-item text-center">
								{# On crée une image cliquable et on collecte le bon produit grace au slug en deuxième param#}
								<a href="{{ path('product',{'slug':product.slug}) }}"><img src="/uploads/{{ product.illustration }}" alt="" class="img-fluid "></a>

								<h5>{{ product.name }}</h5>
								<p class="product-subtitle">{{ product.subtitle }}</p>
								<p class="product-price">{{ (product.price/100) | number_format(2,',','.') }}
									€</p>
								{# /Le point du chiffre est remplacé par une "," #}

							</div>
						</div>
					{% endfor %}

				</div>

			</div>
		</div>


	{% endblock %}
